et":1745,"anchor":"Retraction_of_foreword"},{"toclevel":1,"level":"2","line":"Reception","number":"3","index":"3","fromtitle":"The_Day_After_Roswell","byteoffset":2559,"anchor":"Reception"},{"toclevel":1,"level":"2","line":"Media appearances","number":"4","index":"4","fromtitle":"The_Day_After_Roswell","byteoffset":3907,"anchor":"Media_appearances"},{"toclevel":1,"level":"2","line":"See also","number":"5","index":"5","fromtitle":"The_Day_After_Roswell","byteoffset":4861,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"Notes","number":"6","index":"6","fromtitle":"The_Day_After_Roswell","byteoffset":4937,"anchor":"Notes"}],"parsewarnings":[],"displaytitle":"<i>The Day After Roswell</i>","iwlinks":[],"properties":[{"name":"displaytitle","*":"<i>The Day After Roswell</i>"},{"name":"defaultsort","*":"Day After Roswell, The"},{"name":"wikibase_item","*":"Q7729150"}]}}