center.org/publication/china-environment-series-11997","http://news.bbc.co.uk/1/shared/spl/hi/asia_pac/02/china_party_congress/china_ruling_party/how_china_is_ruled/html/provinces.stm","https://www.bbc.co.uk/news/world-asia-pacific-13904437"],"sections":[{"toclevel":1,"level":"2","line":"Under Maoist rule","number":"1","index":"1","fromtitle":"Tiao-kuai","byteoffset":1912,"anchor":"Under_Maoist_rule"},{"toclevel":1,"level":"2","line":"In the reform era","number":"2","index":"2","fromtitle":"Tiao-kuai","byteoffset":2890,"anchor":"In_the_reform_era"},{"toclevel":1,"level":"2","line":"Comparisons to other countries","number":"3","index":"3","fromtitle":"Tiao-kuai","byteoffset":5084,"anchor":"Comparisons_to_other_countries"},{"toclevel":1,"level":"2","line":"See also","number":"4","index":"4","fromtitle":"Tiao-kuai","byteoffset":5755,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"References","number":"5","index":"5","fromtitle":"Tiao-kuai","byteoffset":5859,"anchor":"References"},{"toclevel":1,"level":"2","line":"External links","number":"6","index":"6","fromtitle":"Tiao-kuai","byteoffset":5887,"anchor":"External_links"}],"parsewarnings":[],"displaytitle":"Tiao-kuai","iwlinks":[{"prefix":"wikt","url":"https://en.wiktionary.org/wiki/command","*":"wikt:command"}],"properties":[{"name":"wikibase_item","*":"Q7800261"}]}}