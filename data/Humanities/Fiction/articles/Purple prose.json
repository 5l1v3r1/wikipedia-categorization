"Module:Citation/CS1/Configuration"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Whitelist"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Utilities"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Date validation"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Identifiers"},{"ns":828,"exists":"","*":"Module:Citation/CS1/COinS"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"},{"ns":828,"exists":"","*":"Module:Side box"}],"images":["Wiktionary-logo-en-v2.svg"],"externallinks":["http://www.wordsmith.org/words/purple_prose.html","https://www.nytimes.com/1985/12/15/books/in-defense-of-purple-prose.html?pagewanted=2","https://books.google.com/books?id=XTY6q_hIa90C&pg=PA194","https://books.google.com/books?id=-ohlxXHpEK8C&pg=PA147","http://www.yorku.ca/pswarney/Texts/ars-poetica.htm"],"sections":[{"toclevel":1,"level":"2","line":"Origins","number":"1","index":"1","fromtitle":"Purple_prose","byteoffset":1478,"anchor":"Origins"},{"toclevel":1,"level":"2","line":"Examples","number":"2","index":"2","fromtitle":"Purple_prose","byteoffset":3843,"anchor":"Examples"},{"toclevel":1,"level":"2","line":"See also","number":"3","index":"3","fromtitle":"Purple_prose","byteoffset":4561,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"References","number":"4","index":"4","fromtitle":"Purple_prose","byteoffset":4675,"anchor":"References"}],"parsewarnings":[],"displaytitle":"Purple prose","iwlinks":[{"prefix":"wiktionary","url":"https://en.wiktionary.org/wiki/Special:Search/purple_prose","*":"wiktionary:Special:Search/purple prose"}],"properties":[{"name":"defaultsort","*":"Purple Prose"},{"name":"wikibase_item","*":"Q7261479"}]}}