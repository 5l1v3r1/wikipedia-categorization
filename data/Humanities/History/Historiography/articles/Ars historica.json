s":"","*":"Livy"},{"ns":0,"exists":"","*":"Lucian of Samosata"},{"ns":0,"exists":"","*":"Magistra vitae"},{"ns":0,"exists":"","*":"Niccol\u00f2 Machiavelli"},{"ns":0,"exists":"","*":"Paolo Giovio"},{"ns":0,"exists":"","*":"Philology"},{"ns":0,"exists":"","*":"Pietro Perna"},{"ns":0,"exists":"","*":"Poetics (Aristotle)"},{"ns":0,"exists":"","*":"Rationalism"},{"ns":0,"exists":"","*":"Renaissance"},{"ns":0,"exists":"","*":"Renaissance humanism"},{"ns":0,"exists":"","*":"Sebastian Fox Morcillo"},{"ns":0,"exists":"","*":"Simon Grynaeus"},{"ns":0,"exists":"","*":"Tacitus"},{"ns":0,"exists":"","*":"Textual criticism"},{"ns":0,"exists":"","*":"Theodor Zwinger"},{"ns":0,"exists":"","*":"Thomas Blundeville"},{"ns":0,"exists":"","*":"Thucydides"},{"ns":0,"exists":"","*":"Torquato Tasso"},{"ns":0,"*":"Agostino Mascardi"}],"templates":[{"ns":10,"exists":"","*":"Template:Reflist"},{"ns":10,"exists":"","*":"Template:Main other"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"}],"images":["Vossius.jpg","Perna_printer's_device_1558.pdf"],"externallinks":[],"sections":[{"toclevel":1,"level":"2","line":"Background","number":"1","index":"1","fromtitle":"Ars_historica","byteoffset":431,"anchor":"Background"},{"toclevel":1,"level":"2","line":"Sixteenth century","number":"2","index":"2","fromtitle":"Ars_historica","byteoffset":1425,"anchor":"Sixteenth_century"},{"toclevel":1,"level":"2","line":"Seventeenth century","number":"3","index":"3","fromtitle":"Ars_historica","byteoffset":4341,"anchor":"Seventeenth_century"},{"toclevel":1,"level":"2","line":"Notes","number":"4","index":"4","fromtitle":"Ars_historica","byteoffset":5057,"anchor":"Notes"},{"toclevel":1,"level":"2","line":"References","number":"5","index":"5","fromtitle":"Ars_historica","byteoffset":5080,"anchor":"References"}],"parsewarnings":[],"displaytitle":"Ars historica","iwlinks":[],"properties":[{"name":"wikibase_item","*":"Q4796323"}]}}