otes"},{"toclevel":1,"level":"2","line":"References","number":"4","index":"4","fromtitle":"Rod-and-ring_symbol","byteoffset":3476,"anchor":"References"},{"toclevel":1,"level":"2","line":"External links","number":"5","index":"5","fromtitle":"Rod-and-ring_symbol","byteoffset":4390,"anchor":"External_links"}],"parsewarnings":[],"displaytitle":"Rod-and-ring symbol","iwlinks":[{"prefix":"wiktionary","url":"https://en.wiktionary.org/wiki/coil","*":"wiktionary:coil"}],"properties":[{"name":"wikibase_item","*":"Q7356088"}]}}