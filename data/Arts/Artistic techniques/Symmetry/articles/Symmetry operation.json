y_operation","byteoffset":1106,"anchor":"Improper_rotation_operations"},{"toclevel":2,"level":"3","line":"Examples","number":"1.3","index":"4","fromtitle":"Symmetry_operation","byteoffset":1913,"anchor":"Examples"},{"toclevel":1,"level":"2","line":"Crystals","number":"2","index":"5","fromtitle":"Symmetry_operation","byteoffset":3200,"anchor":"Crystals"},{"toclevel":1,"level":"2","line":"References","number":"3","index":"6","fromtitle":"Symmetry_operation","byteoffset":3636,"anchor":"References"}],"parsewarnings":[],"displaytitle":"Symmetry operation","iwlinks":[],"properties":[{"name":"wikibase_item","*":"Q7661343"}]}}