"templates":[{"ns":10,"exists":"","*":"Template:Anchor"},{"ns":10,"exists":"","*":"Template:Reflist"},{"ns":10,"exists":"","*":"Template:Cite web"},{"ns":10,"exists":"","*":"Template:Cite book"},{"ns":10,"exists":"","*":"Template:Main other"},{"ns":828,"exists":"","*":"Module:Anchor"},{"ns":828,"exists":"","*":"Module:Arguments"},{"ns":828,"exists":"","*":"Module:TableTools"},{"ns":828,"exists":"","*":"Module:Citation/CS1"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Configuration"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Whitelist"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Utilities"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Date validation"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Identifiers"},{"ns":828,"exists":"","*":"Module:Citation/CS1/COinS"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"}],"images":["Vybijeci_zarizeni.jpg"],"externallinks":["https://web.archive.org/web/20120801111101/http://beabettershot.com/dry-fire/","https://www.concealedcarry.com/gear/tools-of-dry-fire-firearm-training/","https://books.google.com/books?id=7Ab12fHr8y0C","http://www.worldwidewords.org/qa/qa-dry1.htm"],"sections":[{"toclevel":1,"level":"2","line":"Benefits","number":"1","index":"1","fromtitle":"Dry_fire","byteoffset":902,"anchor":"Benefits"},{"toclevel":1,"level":"2","line":"Considerations","number":"2","index":"2","fromtitle":"Dry_fire","byteoffset":2656,"anchor":"Considerations"},{"toclevel":1,"level":"2","line":"In archery","number":"3","index":"3","fromtitle":"Dry_fire","byteoffset":3753,"anchor":"In_archery"},{"toclevel":1,"level":"2","line":"Etymology","number":"4","index":"4","fromtitle":"Dry_fire","byteoffset":5487,"anchor":"Etymology"},{"toclevel":1,"level":"2","line":"See also","number":"5","index":"5","fromtitle":"Dry_fire","byteoffset":6136,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"References","number":"6","index":"6","fromtitle":"Dry_fire","byteoffset":6183,"anchor":"References"}],"parsewarnings":[],"d