"},{"ns":0,"exists":"","*":"Gh\u014dr Province"},{"ns":0,"exists":"","*":"Kara-Khanid Khanate"},{"ns":0,"exists":"","*":"Mahmud of Ghazni"},{"ns":0,"exists":"","*":"Nuh II"},{"ns":0,"exists":"","*":"Pagan"},{"ns":0,"exists":"","*":"Persian language"},{"ns":0,"exists":"","*":"Samanid Empire"},{"ns":0,"exists":"","*":"Samanids"},{"ns":0,"exists":"","*":"Sebuktigin"},{"ns":0,"exists":"","*":"Simjurid"}],"templates":[{"ns":10,"exists":"","*":"Template:Infobox book"},{"ns":10,"exists":"","*":"Template:Infobox"},{"ns":10,"exists":"","*":"Template:Yesno"},{"ns":10,"exists":"","*":"Template:Main other"},{"ns":10,"exists":"","*":"Template:Both"},{"ns":10,"exists":"","*":"Template:Italic title"},{"ns":10,"exists":"","*":"Template:Template other"},{"ns":10,"exists":"","*":"Template:Wikidata image"},{"ns":10,"exists":"","*":"Template:Reflist"},{"ns":828,"exists":"","*":"Module:Infobox"},{"ns":828,"exists":"","*":"Module:Navbar"},{"ns":828,"exists":"","*":"Module:Wikidata"},{"ns":828,"exists":"","*":"Module:No globals"},{"ns":828,"exists":"","*":"Module:I18n"},{"ns":828,"*":"Module:Infobox/i18n"},{"ns":828,"exists":"","*":"Module:Italic title"},{"ns":828,"exists":"","*":"Module:Yesno"},{"ns":828,"exists":"","*":"Module:Arguments"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"}],"images":[],"externallinks":[],"sections":[{"toclevel":1,"level":"2","line":"Content","number":"1","index":"1","fromtitle":"Tarikh_Yamini","byteoffset":2430,"anchor":"Content"},{"toclevel":1,"level":"2","line":"Early translations","number":"2","index":"2","fromtitle":"Tarikh_Yamini","byteoffset":4712,"anchor":"Early_translations"},{"toclevel":1,"level":"2","line":"Modern era","number":"3","index":"3","fromtitle":"Tarikh_Yamini","byteoffset":5096,"anchor":"Modern_era"},{"toclevel":1,"level":"2","line":"References","number":"4","index":"4","fromtitle":"Tarikh_Yamini","byteoffset":5262,"anchor":"References"}],"parsewarnings":[],"displaytitle":"<i>Tarikh Yamini</i>","iwlinks":[],"properties"