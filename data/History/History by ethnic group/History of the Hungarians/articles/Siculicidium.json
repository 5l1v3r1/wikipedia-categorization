"*":"Module:Arguments"},{"ns":828,"exists":"","*":"Module:Message box/configuration"},{"ns":828,"exists":"","*":"Module:Category handler"},{"ns":828,"exists":"","*":"Module:Category handler/data"},{"ns":828,"exists":"","*":"Module:Category handler/config"},{"ns":828,"exists":"","*":"Module:Category handler/shared"},{"ns":828,"exists":"","*":"Module:Category handler/blacklist"},{"ns":828,"exists":"","*":"Module:Namespace detect/data"},{"ns":828,"exists":"","*":"Module:Namespace detect/config"},{"ns":828,"exists":"","*":"Module:Separated entries"},{"ns":828,"exists":"","*":"Module:TableTools"}],"images":["Question_book-new.svg","Josip_\u0160i\u0161kovi\u0107.jpg","Prosecution_document_Madefalva.gif","Siculicidium2.JPG"],"externallinks":[],"sections":[{"toclevel":1,"level":"2","line":"History","number":"1","index":"1","fromtitle":"Siculicidium","byteoffset":563,"anchor":"History"},{"toclevel":1,"level":"2","line":"Consequences","number":"2","index":"2","fromtitle":"Siculicidium","byteoffset":1361,"anchor":"Consequences"},{"toclevel":1,"level":"2","line":"Commemorations","number":"3","index":"3","fromtitle":"Siculicidium","byteoffset":2209,"anchor":"Commemorations"},{"toclevel":1,"level":"2","line":"See also","number":"4","index":"4","fromtitle":"Siculicidium","byteoffset":2949,"anchor":"See_also"}],"parsewarnings":[],"displaytitle":"Siculicidium","iwlinks":[{"prefix":"ro","url":"https://ro.wikipedia.org/wiki/Iacobe%C8%99ti,_Suceava","*":"ro:Iacobe\u0219ti, Suceava"}],"properties":[{"name":"wikibase_item","*":"Q831953"}]}}