,"*":"Side rod"},{"ns":0,"exists":"","*":"Stationary steam engine"},{"ns":0,"exists":"","*":"Water wheel"},{"ns":0,"exists":"","*":"Waterwheel"}],"templates":[{"ns":10,"exists":"","*":"Template:For"},{"ns":10,"exists":"","*":"Template:Reflist"},{"ns":10,"exists":"","*":"Template:Column-width"},{"ns":10,"exists":"","*":"Template:US patent"},{"ns":10,"exists":"","*":"Template:Main other"},{"ns":828,"exists":"","*":"Module:For"},{"ns":828,"exists":"","*":"Module:Hatnote list"},{"ns":828,"exists":"","*":"Module:Hatnote"},{"ns":828,"exists":"","*":"Module:Yesno"},{"ns":828,"exists":"","*":"Module:Arguments"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"}],"images":["Jackshaft_two_belt_pulleys.png","TractorPTOshaftMay04.jpg"],"externallinks":["https://books.google.com/books?id=S3FDAAAAYAAJ&pg=PA177","https://books.google.com/books?id=HD1EAAAAMAAJ&pg=PA73","https://books.google.com/books?id=XNgGAAAAYAAJ&pg=PA314","https://books.google.com/books?id=NJcPAQAAIAAJ&pg=PA224Rope","https://books.google.com/books?id=q5dKAAAAMAAJ&pg=42","https://books.google.com/books?id=5IVMAAAAYAAJ&pg=PA316","https://books.google.com/books?id=ojofAQAAMAAJ&pg=PA565","https://books.google.com/books?id=J0eOQXpW6MEC&pg=PA55","//www.google.com/patents/US450970","https://books.google.com/books?id=xaM1AQAAMAAJ&pg=PA324","https://books.google.com/books?id=Ty84AAAAMAAJ&pg=PA433"],"sections":[{"toclevel":1,"level":"2","line":"History","number":"1","index":"1","fromtitle":"Jackshaft","byteoffset":604,"anchor":"History"},{"toclevel":2,"level":"3","line":"Jackshaft","number":"1.1","index":"2","fromtitle":"Jackshaft","byteoffset":616,"anchor":"Jackshaft"},{"toclevel":2,"level":"3","line":"Countershaft","number":"1.2","index":"3","fromtitle":"Jackshaft","byteoffset":4263,"anchor":"Countershaft"},{"toclevel":1,"level":"2","line":"See also","number":"2","index":"4","fromtitle":"Jackshaft","byteoffset":6253,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"References","number":"3","index":"5