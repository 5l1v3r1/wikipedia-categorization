:0,"exists":"","*":"United States"},{"ns":0,"exists":"","*":"United States Army"},{"ns":0,"exists":"","*":"United States Government Publishing Office"},{"ns":0,"exists":"","*":"United States War Department"},{"ns":0,"exists":"","*":"Venereal diseases"},{"ns":0,"exists":"","*":"Virginia Polytechnic Institute and State University"},{"ns":0,"exists":"","*":"Virginia Tech"},{"ns":0,"exists":"","*":"Wood engraving"},{"ns":0,"exists":"","*":"Woodburytype"},{"ns":0,"*":"Broadfoot Publishing Company"},{"ns":0,"*":"George A. Otis"},{"ns":0,"*":"Charles Smart"},{"ns":0,"*":"Army itch"},{"ns":0,"*":"D.L. Huntington"}],"templates":[{"ns":10,"exists":"","*":"Template:Italic title"},{"ns":828,"exists":"","*":"Module:Italic title"},{"ns":828,"exists":"","*":"Module:No globals"},{"ns":828,"exists":"","*":"Module:Yesno"},{"ns":828,"exists":"","*":"Module:Arguments"}],"images":["MSHWR2.jpg","MSHWR1.jpg"],"externallinks":["https://archive.org/index.php","https://archive.org/details/MSHWRMedical1","https://archive.org/details/MSHWRSurgical1","https://archive.org/details/MSHWRMedical2","https://archive.org/details/MSHWRSurgical2","https://archive.org/details/MSHWRMedical3","https://archive.org/details/MSHWRSurgical3"],"sections":[{"toclevel":1,"level":"2","line":"Contents","number":"1","index":"1","fromtitle":"Medical_and_Surgical_History_of_the_War_of_the_Rebellion","byteoffset":720,"anchor":"Contents"},{"toclevel":1,"level":"2","line":"Editions and reprints","number":"2","index":"2","fromtitle":"Medical_and_Surgical_History_of_the_War_of_the_Rebellion","byteoffset":1796,"anchor":"Editions_and_reprints"},{"toclevel":1,"level":"2","line":"The volumes","number":"3","index":"3","fromtitle":"Medical_and_Surgical_History_of_the_War_of_the_Rebellion","byteoffset":2657,"anchor":"The_volumes"},{"toclevel":1,"level":"2","line":"See also","number":"4","index":"4","fromtitle":"Medical_and_Surgical_History_of_the_War_of_the_Rebellion","byteoffset":5092,"anchor":"See_also"},{"toclevel":1,"level":"2