s":0,"exists":"","*":"Fritz Haber"},{"ns":0,"exists":"","*":"Gas"},{"ns":0,"exists":"","*":"Germany"},{"ns":0,"exists":"","*":"Half-life"},{"ns":0,"exists":"","*":"Insecticide"},{"ns":0,"exists":"","*":"Log-log plot"},{"ns":0,"exists":"","*":"Mathematical"},{"ns":0,"exists":"","*":"Mathematical model"},{"ns":0,"exists":"","*":"Mathematical product"},{"ns":0,"exists":"","*":"Median lethal dose"},{"ns":0,"exists":"","*":"Order of reaction"},{"ns":0,"exists":"","*":"Poisonous"},{"ns":0,"exists":"","*":"PubMed Identifier"},{"ns":0,"exists":"","*":"Statistician"},{"ns":0,"exists":"","*":"Symbol"},{"ns":0,"exists":"","*":"Time"},{"ns":0,"exists":"","*":"Toxic"},{"ns":0,"exists":"","*":"Toxicity"},{"ns":0,"exists":"","*":"Toxicology"}],"templates":[{"ns":10,"exists":"","*":"Template:LD50"},{"ns":10,"exists":"","*":"Template:Reflist"},{"ns":10,"exists":"","*":"Template:Cite journal"},{"ns":10,"exists":"","*":"Template:Main other"},{"ns":828,"exists":"","*":"Module:Citation/CS1"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Configuration"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Whitelist"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Utilities"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Date validation"},{"ns":828,"exists":"","*":"Module:Citation/CS1/Identifiers"},{"ns":828,"exists":"","*":"Module:Citation/CS1/COinS"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"}],"images":[],"externallinks":["//doi.org/10.1016/S0300-483X(00)00229-8","//www.ncbi.nlm.nih.gov/pubmed/10963858"],"sections":[{"toclevel":1,"level":"2","line":"See also","number":"1","index":"1","fromtitle":"Haber's_rule","byteoffset":3007,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"References","number":"2","index":"2","fromtitle":"Haber's_rule","byteoffset":3112,"anchor":"References"}],"parsewarnings":[],"displaytitle":"Haber's rule","iwlinks":[],"properties":[{"name":"wikibase_item","*":"Q1566802"}]}}