images":["Campaspe.jpg"],"externallinks":["https://archive.org/stream/johnlylyandeuph00chilgoog#page/n10/mode/2up","http://digital.library.cornell.edu/cgi/t/text/pageviewer-idx?c=nwng;cc=nwng;rgn=full%20text;idno=nwng0050-3;didno=nwng0050-3;view=image;seq=0199;node=nwng0050-3:3","https://archive.org/stream/mariusepicurean05pategoog#page/n100/mode/2up","http://www.litencyc.com/php/stopics.php?rec=true&UID=360","http://www.britannica.com/EBchecked/topic/195474/euphuism"],"sections":[{"toclevel":1,"level":"2","line":"<i>Euphues</i> (1580)","number":"1","index":"1","fromtitle":"Euphuism","byteoffset":509,"anchor":"Euphues_(1580)"},{"toclevel":1,"level":"2","line":"Principles","number":"2","index":"2","fromtitle":"Euphuism","byteoffset":1368,"anchor":"Principles"},{"toclevel":1,"level":"2","line":"Examples","number":"3","index":"3","fromtitle":"Euphuism","byteoffset":1802,"anchor":"Examples"},{"toclevel":1,"level":"2","line":"Legacy","number":"4","index":"4","fromtitle":"Euphuism","byteoffset":4247,"anchor":"Legacy"},{"toclevel":1,"level":"2","line":"Contemporary equivalents in other languages","number":"5","index":"5","fromtitle":"Euphuism","byteoffset":5009,"anchor":"Contemporary_equivalents_in_other_languages"},{"toclevel":1,"level":"2","line":"See also","number":"6","index":"6","fromtitle":"Euphuism","byteoffset":5424,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"Sources","number":"7","index":"7","fromtitle":"Euphuism","byteoffset":5479,"anchor":"Sources"},{"toclevel":1,"level":"2","line":"Further reading","number":"8","index":"8","fromtitle":"Euphuism","byteoffset":5577,"anchor":"Further_reading"},{"toclevel":1,"level":"2","line":"External links","number":"9","index":"9","fromtitle":"Euphuism","byteoffset":6238,"anchor":"External_links"}],"parsewarnings":[],"displaytitle":"Euphuism","iwlinks":[],"properties":[{"name":"wikibase_item","*":"Q8346457"}]}}