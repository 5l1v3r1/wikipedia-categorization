dule:Citation/CS1/Identifiers"},{"ns":828,"exists":"","*":"Module:Citation/CS1/COinS"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"}],"images":[],"externallinks":["//doi.org/10.1017/s0952675700001329","//www.jstor.org/stable/4420029","https://web.archive.org/web/20130921053600/http://homepages.uconn.edu/~anc02008/Papers/METAPHONY.pdf","http://homepages.uconn.edu/~anc02008/Papers/METAPHONY.pdf","http://personales.uniovi.es/web/ariasal/","//www.jstor.org/stable/3735232"],"sections":[{"toclevel":1,"level":"2","line":"Italo-Romance languages","number":"1","index":"1","fromtitle":"Metaphony_(Romance_languages)","byteoffset":614,"anchor":"Italo-Romance_languages"},{"toclevel":1,"level":"2","line":"Western Romance languages","number":"2","index":"2","fromtitle":"Metaphony_(Romance_languages)","byteoffset":4548,"anchor":"Western_Romance_languages"},{"toclevel":2,"level":"3","line":"Astur-Leonese","number":"2.1","index":"3","fromtitle":"Metaphony_(Romance_languages)","byteoffset":5900,"anchor":"Astur-Leonese"},{"toclevel":2,"level":"3","line":"Portuguese","number":"2.2","index":"4","fromtitle":"Metaphony_(Romance_languages)","byteoffset":9470,"anchor":"Portuguese"},{"toclevel":1,"level":"2","line":"Romanian","number":"3","index":"5","fromtitle":"Metaphony_(Romance_languages)","byteoffset":10670,"anchor":"Romanian"},{"toclevel":1,"level":"2","line":"Sardinian","number":"4","index":"6","fromtitle":"Metaphony_(Romance_languages)","byteoffset":11201,"anchor":"Sardinian"},{"toclevel":1,"level":"2","line":"See also","number":"5","index":"7","fromtitle":"Metaphony_(Romance_languages)","byteoffset":11711,"anchor":"See_also"},{"toclevel":1,"level":"2","line":"Notes","number":"6","index":"8","fromtitle":"Metaphony_(Romance_languages)","byteoffset":11773,"anchor":"Notes"}],"parsewarnings":[],"displaytitle":"Metaphony (Romance languages)","iwlinks":[],"properties":[{"name":"wikibase_item","*":"Q17081344"}]}}