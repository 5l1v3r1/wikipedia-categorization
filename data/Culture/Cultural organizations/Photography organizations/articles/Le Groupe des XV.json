in"},{"ns":0,"*":"Ren\u00e9 Giton"},{"ns":0,"*":"Henri Lacheroy"},{"ns":0,"*":"Therese Le Prat"},{"ns":0,"*":"Daniel Masclet"},{"ns":0,"*":"Jean S\u00e9eberger"},{"ns":0,"*":"Ren\u00e9 Servant"}],"templates":[{"ns":10,"exists":"","*":"Template:Columns-list"},{"ns":10,"exists":"","*":"Template:Div col"},{"ns":10,"exists":"","*":"Template:Column-width"},{"ns":10,"exists":"","*":"Template:Main other"},{"ns":10,"exists":"","*":"Template:Refs"},{"ns":10,"exists":"","*":"Template:Reflist"},{"ns":828,"exists":"","*":"Module:Check for unknown parameters"}],"images":[],"externallinks":["http://tristan.u-bourgogne.fr/CGC/publications/image_artiste/Juliette_Lavie.html"],"sections":[{"toclevel":1,"level":"2","line":"Group members","number":"1","index":"1","fromtitle":"Le_Groupe_des_XV","byteoffset":297,"anchor":"Group_members"},{"toclevel":1,"level":"2","line":"Professional organisation","number":"2","index":"2","fromtitle":"Le_Groupe_des_XV","byteoffset":802,"anchor":"Professional_organisation"},{"toclevel":1,"level":"2","line":"Ethos","number":"3","index":"3","fromtitle":"Le_Groupe_des_XV","byteoffset":1984,"anchor":"Ethos"},{"toclevel":1,"level":"2","line":"Defining the status of the profession","number":"4","index":"4","fromtitle":"Le_Groupe_des_XV","byteoffset":3029,"anchor":"Defining_the_status_of_the_profession"},{"toclevel":1,"level":"2","line":"Exhibitions","number":"5","index":"5","fromtitle":"Le_Groupe_des_XV","byteoffset":4501,"anchor":"Exhibitions"},{"toclevel":1,"level":"2","line":"Humanist photography","number":"6","index":"6","fromtitle":"Le_Groupe_des_XV","byteoffset":5036,"anchor":"Humanist_photography"},{"toclevel":1,"level":"2","line":"References","number":"7","index":"7","fromtitle":"Le_Groupe_des_XV","byteoffset":5419,"anchor":"References"}],"parsewarnings":[],"displaytitle":"Le Groupe des XV","iwlinks":[{"prefix":"fr","url":"https://fr.wikipedia.org/wiki/Cercle_de_la_librairie","*":"fr:Cercle de la librairie"}],"properties":[{"name":"wikibase_item","*":"Q