ex":"4","fromtitle":"Baptist_well_drilling","byteoffset":2022,"anchor":"Technical_specifications"},{"toclevel":1,"level":"2","line":"Reaming","number":"5","index":"5","fromtitle":"Baptist_well_drilling","byteoffset":4485,"anchor":"Reaming"},{"toclevel":1,"level":"2","line":"References","number":"6","index":"6","fromtitle":"Baptist_well_drilling","byteoffset":4945,"anchor":"References"},{"toclevel":1,"level":"2","line":"External links","number":"7","index":"7","fromtitle":"Baptist_well_drilling","byteoffset":4973,"anchor":"External_links"}],"parsewarnings":[],"displaytitle":"Baptist well drilling","iwlinks":[],"properties":[{"name":"defaultsort","*":"Baptist Well Drilling"},{"name":"wikibase_item","*":"Q4857711"}]}}